---
import {formatearFecha} from '../helpers'
export interface Props {
    titulo : string;
    contenido : string;
    url : string;
    imagen : string;
    createdAt : string;
}

const {titulo, contenido, imagen, createdAt, url} = Astro.props
---

<article class="post">
    <div >
        <img src={imagen} alt=`Imagen ${titulo}`>
        <div class="contenido">
            <h3 class="heading">{titulo}</h3>
            <p class="resumen">{contenido}</p>
            <p class="fecha">{formatearFecha(createdAt)}</p>
            <a class="enlace" href=`/blog/${url}`>Ver Post</a>
        </div>
        
    </div>
</article>

<style>
    .post {
        max-width: 80rem;
        margin: 0 auto;
    }
    .contenido {
        padding: 1.5rem;
    }
    .contenido h3 {
        font-weight: 900;
        font-size: 2.8rem;
        margin: 0;
    }
    .fecha {
        font-size: 1.6rem;
        color: var(--primary);
    }
    .resumen {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 4;
        overflow: hidden;
    }
    .texto {
        white-space: pre-wrap;
    }

    .mt-3 {
        margin-top: 3rem;
    }
    .enlace {
        margin-top: 2rem;
        display: block;
        background-color: var(--black);
        color: var(--white);
        text-decoration: none;
        padding: 1rem;
        text-align: center;
        text-transform: uppercase;
        font-size: 1.4rem;
        font-weight: 700;
        transition-property: background-color;
        transition-duration: 300ms;
    }
    .enlace:hover {
        background-color: var(--primary);
    }
</style>